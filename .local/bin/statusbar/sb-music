#!/bin/sh

# Function to filter MPC status
filter_mpc() {
    sed "/^volume:/d;s/\\[paused\\].*//g;/\\[playing\\].*/d;/^ERROR/Q" | paste -sd ' ' -
}

# Get current song and status from MPC
current_song=$(mpc status | filter_mpc)

# Output the combined information with the emoji
echo "$current_song"
