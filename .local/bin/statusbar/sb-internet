#!/bin/sh

# Check if NetworkManager service is active
if systemctl is-active --quiet NetworkManager; then
    status_icon=" "
else
    status_icon=" "
fi

case $BLOCK_BUTTON in
    1)
        # Toggle NetworkManager service
        if systemctl is-active --quiet NetworkManager; then
            sudo systemctl stop NetworkManager
        else
            sudo systemctl start NetworkManager
        fi
        pkill -RTMIN+4 dwmblocks ;;
    3)
        # Show a notification explaining the functionality
        notify-send "Network Manager Module" "Left-click to toggle NetworkManager service on or off" ;;
esac

echo "$status_icon"
